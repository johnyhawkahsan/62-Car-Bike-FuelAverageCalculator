<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/default_padding"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_iconCarBike"
            android:layout_width="@dimen/profile_image_size"
            android:layout_height="@dimen/profile_image_size"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/default_margin"
            android:contentDescription="CarBikeIcon"
            app:srcCompat="@drawable/ic_empty_car" />


        <TextView
            android:id="@+id/tv_carOrBike"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            tools:text="Honda Civic"
            android:textSize="16sp" />


        <TextView
            android:id="@+id/tv_carBikeMakeModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:lines="1"
            tools:text="2018 1.8ltr"
            android:textSize="16sp"
            android:textColor="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/tv_lastAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        tools:text="Last average = 12 km "
        android:textSize="16sp"
        android:textColor="@color/colorAccent"/>

    </LinearLayout>

