<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Dialog.Vertical">


    <LinearLayout style="@style/RootLayout.Horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/activity_margin"
                android:background="@drawable/ic_car"
                android:focusable="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_margin="@dimen/activity_margin"
                android:background="@drawable/ic_bike"
                android:focusable="true" />
        </LinearLayout>


    </LinearLayout>


    <RadioGroup
        android:id="@+id/maptype"
        style="@style/RootLayout.Horizontal">

        <RadioButton
            android:id="@+id/map"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:layout_margin="@dimen/activity_margin"
            android:background="@drawable/ic_car"
            android:button="@android:color/transparent"/>

        <RadioButton
            android:id="@+id/satellite"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_weight="2"
            android:layout_margin="@dimen/activity_margin"
            android:background="@drawable/ic_bike"
            android:button="@android:color/transparent" />
    </RadioGroup>


    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/textInputMakeModel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input Make and Model"
            android:inputType="text"
            android:lines="1" />

    </com.google.android.material.textfield.TextInputLayout>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabSaveCarBike"
        style="@style/Item.Fab"
        android:src="@drawable/ic_save_24dp" />

</LinearLayout>




