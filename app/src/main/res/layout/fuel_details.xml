<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:padding="@dimen/default_padding">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_tiny">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="20dp"
                    android:text="Fuel Record"
                    android:textColor="@color/colorWhite"
                    android:textSize="22sp" />

            </RelativeLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/btn_edit_fuel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="Edit"
                android:src="@drawable/ic_edit_24dp" />

            <ImageButton
                android:id="@+id/btn_delete_fuel"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:backgroundTint="@color/colorPrimary"
                android:contentDescription="Delete"
                android:src="@drawable/ic_delete_24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_fuel_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:gravity="center_vertical"
                android:text="14-Jan-2021"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="24sp" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_perLitrePrice"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="perLitrePrice"
                android:textSize="12sp" />


            <ImageButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@drawable/ic_multiply_sign_24dp" />


            <TextView
                android:id="@+id/tv_fuelQuantityLitres"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="fuelQuantity"
                android:textSize="12sp" />


            <ImageButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@drawable/ic_equal_sign_24dp" />


            <TextView
                android:id="@+id/tv_totalFuelPrice"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="fuel price"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="center_horizontal"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_currentKm"
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="currentKm"
                android:textSize="12sp" />


            <ImageButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@drawable/ic_minus_sign_24dp" />


            <TextView
                android:id="@+id/tv_startingKm"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="startingKm"
                android:textSize="12sp" />


            <ImageButton
                android:layout_width="100sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.40"
                android:src="@drawable/ic_equal_sign_24dp" />


            <TextView
                android:id="@+id/tv_distanceCovered"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_weight="0.10"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="distanceCovered"
                android:textSize="12sp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_tiny"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_equal_sign_24dp" />

            <TextView
                android:id="@+id/tv_calculatedAverage"
                android:layout_width="120sp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:hint="calculatedAverage"
                android:textSize="12sp" />

        </LinearLayout>


    </LinearLayout>


</ScrollView>







