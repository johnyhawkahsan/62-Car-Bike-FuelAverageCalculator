<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>




    <style name="RootLayout">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>

    <style name="RootLayout.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="RootLayout.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>


    <style name="Dialog">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Dialog.Vertical">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Dialog.Horizontal">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Item">
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Item.Fab">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_gravity">bottom|end</item>
        <item name="android:layout_marginBottom">50dp</item>
        <item name="android:layout_marginEnd">23dp</item>
    </style>

    <style name="Item.RootLayout">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Item.RootLayout.WithImage">
        <item name="android:orientation">horizontal</item>
        <item name="android:weightSum">2</item>
    </style>

    <style name="Item.Layout">
        <item name="android:layout_width">@dimen/dimen_0</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="Item.Layout.Info">
        <item name="android:layout_margin">@dimen/margin_tiny</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Item.Layout.Image">
        <item name="android:adjustViewBounds">true</item>
        <item name="android:scaleType">fitEnd</item>
        <item name="android:padding">@dimen/big_padding</item>
    </style>

    <style name="Item.Title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/title_font_size</item>
    </style>

    <style name="Item.Info">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/margin_tiny</item>
    </style>

    <style name="DataContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_tiny</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
