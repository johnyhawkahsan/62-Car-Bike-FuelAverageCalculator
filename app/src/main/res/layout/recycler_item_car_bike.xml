<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <ImageView
        android:id="@+id/iv_iconCarBike"
        android:layout_width="@dimen/profile_image_size"
        android:layout_height="@dimen/profile_image_size"
        android:layout_marginEnd="@dimen/default_margin"
        android:contentDescription="CarBikeIcon"
        app:srcCompat="@drawable/ic_car" />


    <TextView
        android:id="@+id/tv_carOrBike"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        android:textSize="16sp"
        tools:text="Suzuki Every" />


    <TextView
        android:id="@+id/tv_carBikeMakeModel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        tools:text="2006 660cc" />

    <TextView
        android:id="@+id/tv_lastAverage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:lines="1"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        tools:text="Last average = 12 km " />

</LinearLayout>

